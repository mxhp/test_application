<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".business.HomeActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="39dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/music_btn_music"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/text_left_tab_selector"
            android:gravity="center"
            android:padding="8dp"
            android:text="Gank"
            android:textColor="@color/text_index_tab_color"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/music_btn_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/text_right_tab_selector"
            android:gravity="center"
            android:padding="8dp"
            android:text="Video"
            android:textColor="@color/text_index_tab_color"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>
</FrameLayout>