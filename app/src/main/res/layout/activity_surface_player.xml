<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SurfacePlayerActivity">

    <SurfaceView
        android:id="@+id/surfaceview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SurfaceView
        android:id="@+id/surfaceview1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@+id/surfaceview"
        app:layout_constraintStart_toStartOf="@+id/surfaceview"
        app:layout_constraintTop_toBottomOf="@+id/surfaceview" />

    <Button
        android:id="@+id/magic"
        android:text="magic"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintStart_toEndOf="@+id/surfaceview1"
        app:layout_constraintStart_toStartOf="@+id/surfaceview1"
        app:layout_constraintTop_toBottomOf="@+id/surfaceview1"/>

</android.support.constraint.ConstraintLayout>